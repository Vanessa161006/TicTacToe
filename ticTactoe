styles.css
:root {
--bg: #f2f2f2;
--board: #fff;
--line: #333;
--playerX: #1e88e5;
--playerO: #e53935;
}

{ box-sizing: border-box; } html, body { height: 100%; margin: 0; font-family: Arial, sans-serif; background: var(--bg); } h1 { text-align: center; margin-top: 20px; }
#game-status { text-align: center; font-size: 1.1rem; margin: 12px 0; }

.board {
width: 320px;
height: 320px;
margin: 0 auto;
display: grid;
grid-template-columns: repeat(3, 1fr);
gap: 6px;
}
* { box-sizing: border-box; }  /* Fix the selector */

.cell {
  width: 100%;
  aspect-ratio: 1;  /* Modern way to make square cells */
  background: var(--board);
  border: 2px solid var(--line);
  font-size: 48px;
  line-height: 1;
  cursor: pointer;
  position: relative;
}
.cell:focus { outline: 3px solid #555; }
.cell:disabled { cursor: default; opacity: 0.6; }

.cell.x { color: var(--playerX); }
.cell.o { color: var(--playerO); }

button#reset {
display: block;
margin: 16px auto;
padding: 10px 16px;
font-size: 1rem;
cursor: pointer;
}

script.js
(() => {
const boardEl = document.getElementById('board');
const statusEl = document.getElementById('game-status');
const resetBtn = document.getElementById('reset');
const cells = Array.from(document.querySelectorAll('.cell'));

let board = Array(9).fill(null); // 'X', 'O' oder null
let currentPlayer = 'X';
let gameOver = false;

const WIN_LINES = [
[0,1,2], [3,4,5], [6,7,8], // Rows
[0,3,6], [1,4,7], [2,5,8], // Spalten
[0,4,8], [2,4,6]           // Diagonal
];

function render() {
cells.forEach((cell, idx) => {
cell.textContent = board[idx] || '';
cell.classList.remove('x','o');
if (board[idx] === 'X') cell.classList.add('x');
if (board[idx] === 'O') cell.classList.add('o');
cell.disabled = !!board[idx] || gameOver;
});

if (gameOver) {
  if (checkWinner('X')) {
    statusEl.textContent = "Gewonnen: X!";
  } else if (checkWinner('O')) {
    statusEl.textContent = "Gewonnen: O!";
  } else {
    statusEl.textContent = "Unentschieden!";
  }
} else {
  statusEl.textContent = `Spieler ${currentPlayer}: Setze dein Zeichen.`;
}
}

function checkWinner(player) {
return WIN_LINES.some(line => line.every(idx => board[idx] === player));
}

function makeMove(index) {
if (board[index] || gameOver) return;
board[index] = currentPlayer;
// Sieg/Unentschieden prüfen
if (checkWinner(currentPlayer)) {
gameOver = true;
} else if (board.every(v => v)) {
gameOver = true;
} else {
currentPlayer = currentPlayer === 'X' ? 'O' : 'X';
}
render();
}

// Event-Listener für Felder
cells.forEach((cell) => {
cell.addEventListener('click', () => {
const idx = Number(cell.dataset.index);
makeMove(idx);
});
});

resetBtn.addEventListener('click', () => {
board = Array(9).fill(null);
currentPlayer = 'X';
gameOver = false;
render();
});

// Starten
render();
})();
